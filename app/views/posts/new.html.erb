<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">投稿する</h1>
    <%= form_tag("/posts/create",{multipart: true}) do %>
      <div class="form">
        <div class="form-body">
          <% @post.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <p>画像</p>
          <input name="image" type="file">
          <p>猫ちゃんのお名前</p>
          <input name="cat_name" id="cat-name-content"><%= @post.cat_name %></input>
          <button type="button" id="cat-button">マイク</button>
          <%= javascript_pack_tag 'posts/speech' %>
          <p>文章</p>
          <textarea name="content" ><%= @post.content %></textarea>
          <input type="submit" value="投稿">
        </div>
      </div>
    <% end %>
  </div>
</div>